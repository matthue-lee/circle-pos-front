{
  "compilerOptions": {
    "target": "ES2015", // Ensure the target supports modern JavaScript
    "lib": ["ES2015", "DOM"], // Add ES features and browser DOM APIs
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
